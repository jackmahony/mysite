{% extends "base.twig" %}{% block content %}<section style="background: url('{{ TimberImage(post.header_banner) }}')  no-repeat;" id="portrait">{% if project.project_logo %}<img src="{{TimberImage(image)|resize(50,50)}}" />{% endif %}</section><section id="projects">{% for item in post.get_field('block_content') %}  {% if item.acf_fc_layout == 'text_block' %}<div class="row medium-6 medium-centered columns"><div class="textblock">{% if item.heading_two %}<h2>{{item.heading_two}}</h2>{% endif %}{% if item.body_text %}<p>{{item.body_text}}</p>{% endif %}</div></div>  {% elseif item.acf_fc_layout == 'gallery_block' %}<div class="galleryblock"><div class="row medium-up-2">{% for image in item.gallery %}<div class="column">{% if image %}<img src="{{TimberImage(image)}}" /><h4>{{image.caption}}</h4>{% endif %}</div>{% endfor %}</div></div>  {% elseif item.acf_fc_layout == 'button' %}<div class="row"><div class="medium-12 columns">{% if item.website_link %}<a href="{{item.website_link}}"><div class="button medium"><span>Click to view site</span></div></a>{% endif %}  {% endif %}</div></div>{% endfor %}</section>{% endblock %}