    %meta{charset: "{{site.charset}}"}
    %title
      {% if wp_title %}
      {{ wp_title }} - {{ site.name }}
      {% else %}
      {{ site.name }}
      {% endif %}

    %meta{content: "{{ site.name }}", name: "description"}
    %meta{content: "text/html; charset=UTF-8", http-equiv: "Content-Type"}
    %meta{content: "IE=edge,chrome=1", http-equiv: "X-UA-Compatible"}
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    %link{href: "", rel: "pingback"}

    {{function('wp_head')}}

    -# Head Block
    {% block head %}
    {% endblock %}

    -# CSS
    %link{href: "{{theme.link}}/assets/stylesheets/core.css", media: "screen", rel: "stylesheet", type: "text/css"}
    %link{href: "{{theme.link}}/bower_components/animate.css", media: "screen", rel: "stylesheet", type: "text/css"}
    %link{href: "{{theme.link}}/bower_components/hover/css/hover-min.css", media: "screen", rel: "stylesheet", type: "text/css"}


  %body{class: "{{body_class}}", data-template: "base.twig"}

