  -# Contact Page ---------------------------------------------------------
  {% if post.contact_title %}
    %section#contact-text.fadeInUp.animated
      .row{data-equalizer: "contact"}
        .medium-4.columns{data-equalizer-watch: "contact"}
          %a{href: "https://au.linkedin.com/in/jack-mahony-2aa9ba66", target:"_blank"}
            .contact-1.hvr-grow
              %img{src: "{{site.theme.link}}/assets/img/linkedin-blue.svg"}
              %span
                Connect with me on LinkedIn
                %br
          %a{href: "https://dribbble.com/", target:"_blank"}
            .contact-2.hvr-grow
              %img{src: "{{site.theme.link}}/assets/img/dribble-logo-black.svg"}
              %span
                Follow me on dribble
                %br
          -# %a{href: "mailto:jackmahonyy@gmail.com"}
          -#   %img.hvr-grow{src: "{{site.theme.link}}/assets/img/gmail.svg"}
          -#   %span.contact-3
          -#     Send me an email

        .medium-7.medium-1-offset.columns{data-equalizer-watch: "contact"}
          .medium-middle
            {% if post.contact_title %}
              %h3 {{post.contact_title}}
            {% endif %}
            {% if post.contact_text %}
              %p {{post.contact_text}}
            {% endif %}
  {% endif %}

  -# Form-----------------------------------------
  {% if post.slug == 'contact' %}
    %section#contact-form.fadeInUp.animated
      .row
        .small-12.columnns
          %h3 Send me an email
          {% filter shortcodes %}
            [contact-form-7 id="153" title="Contact Me"]
          {% endfilter %}
  {% endif %}

  -# About Page -------------------------------------------------------
  {% if post.about_title %}
    %section#aboutme.fadeInUp.animated
      .row{data-equalizer: "about"}
        .large-5.columns{data-equalizer-watch: "about"}
          .medium-middle
            {% if post.about_image %}
              %img{src: "{{TimberImage(post.about_image)}}"}
            {% endif %}
        .large-7.columns{data-equalizer-watch: "about"}
            .about-title
              {% if post.about_title %}
                %h2 {{post.about_title}}
              {% endif %}
              {% for item in post.get_field('about_text') %}
                %p {{item.text}}
              {% endfor %}

    -# Technical skills section--------------------------------------------
    %section#aboutskills.fadeInUp.animated
      .row
        .medium-12.columns
          %h2 Technical Skills
      .row
        .medium-3.columns
          %img.hvr-grow{src: "{{site.theme.link}}/assets/img/50p.svg"}
          %h3 HTML/CSS
        .medium-3.columns
          %img.hvr-grow{src: "{{site.theme.link}}/assets/img/40p.svg"}
          %h3 WordPress
        .medium-3.columns
          %img.hvr-grow{src: "{{site.theme.link}}/assets/img/60p.svg"}
          %h3 Adobe PS/AI
        .medium-3.columns
          %img.hvr-grow{src: "{{site.theme.link}}/assets/img/50p.svg"}
          %h3 SolidWorks

  {% endif %}

{% endblock %}

-# Scripts---------------------------------------------------------------------
{% block script %}

  %script{src: "{{site.theme.link}}/bower_components/owl.carousel/dist/owl.carousel.min.js"}

  {% for project in projects %}
    -# Owl Slider
    :javascript
      $(document).ready(function() {
        $(".{{project.post_title|sanitize}}").owlCarousel({
          animateOut: 'fadeOut',
          lazyload: true,
          loop: true,
          items: 1,
          lazyLoad: true
        });
      });
  {% endfor %}
{% endblock %}
