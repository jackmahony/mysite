{% extends "base.twig" %}

{% block content %}

  -# Portait Section ------------------------------------------------------
  {% if post.portrait_image %}
    %section#portrait.fadeInUp.animated{style: "background: url('{{ TimberImage(post.portrait_image) }}') top center no-repeat;"}
      .row
        .medium-3.columns
          .designer
            %h2.bounceInRight.animated {{post.designer_title}}
            %p.bounceInRight.animated {{post.designer_text}}
        .medium-3.large-offset-3.columns
          .coder
            %h2.bounceInRight.animated {{post.coder_title}}
            %p.bounceInRight.animated {{post.coder_text}}
  {% endif %}

  -# Projects temporary thumbs------------------------------------------------------------------------------------------------------------------------------
  {% if post.fat_orange_designs %}
    %section#tempprojects.fadeInUp.animated
      .row
        .medium-12.columns
          %h2 Some of my latest work
      .row
        .medium-6.columns
          {% if post.fat_orange_designs %}
            %a{href: "http://fatorangedesigns.com/", target:"_blank"}
              %img.hvr-grow{src: "{{TimberImage(post.fat_orange_designs).src|resize(600, 400)}}"}
          {% endif %}
        .medium-6.columns
          {% if post.six_two_two %}
            %a{href: "http://sixtwotwo.jack-mahony.com/", target:"_blank"}
              %img.hvr-grow{src: "{{TimberImage(post.six_two_two).src|resize(600, 400)}}"}
          {% endif %}
  {% endif %}


