{% extends "base.twig" %}

{% block header %}

%nav#standardnav
  .row{data-equalizer: "standardnav"}
    .small-4.columns.medium-6.columns{data-equalizer-watch: "standardnav"}
      %img{src:"{{site.theme.link}}/assets/img/jm-logo.svg"}
      %span Designs

    .small-8.columns.medium-6.columns{data-equalizer-watch: "standardnav"}
      .standardnav
        %ul.menu
          {% for item in topnav.get_items %}
            %li{class: "{{item.classes | join(' ')}}"}
              %a{href: "{{item.link}}"}
                {{item.title}}
          {% endfor %}
{% endblock %}

{% block content %}
-# About Page -------------------------------------------------------
{% if post.about_title %}
  %section#aboutme
    .row{data-equalizer: "about"}
      .medium-8.centered.columns{data-equalizer-watch: "about"}
        .about-title
          {% if post.about_title %}
            %h2 {{post.about_title}}
          {% endif %}
          {% for item in post.get_field('about_text') %}
            %p {{item.text}}
          {% endfor %}

  -# Technical skills section--------------------------------------------
  %section#aboutskills
    .row
      .medium-12.columns
        %h2 Technical Skills
    .row
      .medium-3.columns
        %img{src: "{{site.theme.link}}/assets/img/50p.svg"}
        %h3 HTML/CSS
      .medium-3.columns
        %img{src: "{{site.theme.link}}/assets/img/40p.svg"}
        %h3 WordPress
      .medium-3.columns
        %img{src: "{{site.theme.link}}/assets/img/60p.svg"}
        %h3 Adobe PS/AI
      .medium-3.columns
        %img{src: "{{site.theme.link}}/assets/img/50p.svg"}
        %h3 SolidWorks

{% endif %}

{% endblock %}
