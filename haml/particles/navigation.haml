-# Main Navigation
%nav#topnav
  .row{data-equalizer: "topnav"}
    .small-6.medium-4.columns{data-equalizer-watch: "topnav"}
      .logo
        %a{href: "{{site.url}}"}
          %img{src: "{{site.theme.link}}/assets/img/logo-jm2.svg"}

    .medium-4.columns.show-for-medium{data-equalizer-watch: "topnav"}
      %ul.menu.text-right
        {% for item in topnav.get_items %}
          %li{class: "{{item.classes | join(' ')}}"}
            %a{href: "{{item.link}}"}
              {{item.title}}
        {% endfor %}
    .small-6.large-4.columns{data-equalizer-watch: "topnav"}
      .social.show-for-large
        .linkedin
          %a{href: "https://au.linkedin.com/in/jack-mahony-2aa9ba66"}
            %img{src: "{{theme.link}}/assets/img/linkedin-logo.svg"}
        .github
          %a{href: "https://dribbble.com/session/new"}
            %img{src: "{{theme.link}}/assets/img/dribble-logo.svg"}

        -# Hamburger
      .text-right.hide-for-medium
        %a#hamburger.hide-for-medium
